<!-- Categories Grid -->
<section class="py-20 dynamic-bg-color slash-bg slant-top slant-bottom pb-32">
	<div class="container mx-auto px-6">

		{% if component.title %}
			<h2 class="text-4xl font-alshohadaa md:text-5xl mb-12 text-center italic uppercase dynamic-text-color">
				{% if component.enable_gradient_word and component.gradient_word %}
					{{ component.title|replace({ (component.gradient_word): '<span class="text-[var(--color-primary)]">' ~ component.gradient_word ~ '</span>' })|raw }}
				{% else %}
					{{ component.title }}
				{% endif %}
			</h2>
		{% endif %}

		<div class="grid grid-cols-1 md:grid-cols-2 {{ component.categories|length == 3 ? 'lg:grid-cols-3' : 'lg:grid-cols-4' }} gap-4 h-[600px]">
			{% for item in component.categories %}
				<!-- Category Card {{ loop.index }} -->
				<div class="relative group
																																		-skew-x-3
																																		hover:border-r-8
																																		 overflow-hidden h-full border-r-4
																																		border-[var(--color-scandary)]
																																		 cursor-pointer">
					<a href="{{ item.url }}" class="block h-full w-full">
						<img src="{{ item.image }}" class="absolute inset-0 w-full h-full object-cover transition duration-500 group-hover:scale-110" alt="{{ item.title }}">
						<div class="absolute inset-0 w-full h-full transition duration-500 hover:bg-[var(--color-primary-20)]" ></div>
						<div class="absolute bottom-0 left-0 p-6 z-10">
							<h3 class="text-3xl font-bold italic uppercase skew-x-[-5deg] dynamic-text-color">{{ item.title }}</h3>
							<p class="text-[var(--color-primary)] font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-300">SHOP NOW &rarr;</p>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
