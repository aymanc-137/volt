<section class="video-banner relative w-full h-[600px] md:h-[700px] lg:h-[800px] overflow-hidden flex items-center justify-center text-center dynamic-bg-color dynamic-text-color group">
    {# Video Background with Enhanced Overlay #}
    {% if component.video_url %}
    <div class="absolute inset-0 z-0">
        <video
            class="w-full h-full object-cover scale-110 group-hover:scale-105 transition-transform duration-[3000ms]"
            {% if component.poster_image %}poster="{{ component.poster_image }}"{% endif %}
            autoplay
            {% if component.start_muted %}muted{% endif %}
            loop
            playsinline
        >
            <source src="{{ component.video_url }}" type="video/mp4">
        </video>
        {# Aggressive gradient overlay #}
        <div class="absolute inset-0 bg-gradient-to-r from-black via-black/80 to-transparent"></div>
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-black/50"></div>
    </div>
    {% endif %}

    {# Animated Speed Lines Effect #}
    <div class="absolute inset-0 z-[1] pointer-events-none overflow-hidden opacity-30">
        <div class="absolute top-1/4 left-0 w-full h-[2px] bg-gradient-to-r from-transparent via-[color:var(--color-primary)] to-transparent animate-speed-line"></div>
        <div class="absolute top-1/3 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-[color:var(--color-scandary)] to-transparent animate-speed-line" style="animation-delay: 0.5s;"></div>
        <div class="absolute top-2/3 left-0 w-full h-[2px] bg-gradient-to-r from-transparent via-[color:var(--color-primary)] to-transparent animate-speed-line" style="animation-delay: 1s;"></div>
        <div class="absolute bottom-1/4 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-white/50 to-transparent animate-speed-line" style="animation-delay: 1.5s;"></div>
    </div>

    {# Diagonal Racing Stripes #}
    <div class="absolute inset-0 z-[2] pointer-events-none opacity-10">
        <div class="absolute -left-1/4 top-0 w-1/2 h-full bg-gradient-to-br from-[color:var(--color-primary)] to-transparent transform -skew-x-[30deg]"></div>
        <div class="absolute -right-1/4 top-0 w-1/2 h-full bg-gradient-to-bl from-[color:var(--color-scandary)] to-transparent transform skew-x-[30deg]"></div>
    </div>

    {# Corner Performance Accents #}
    <div class="absolute top-0 left-0 z-[3] w-24 h-24 md:w-32 md:h-32 border-t-4 border-l-4 border-[color:var(--color-primary)] opacity-60"></div>
    <div class="absolute top-0 right-0 z-[3] w-24 h-24 md:w-32 md:h-32 border-t-4 border-r-4 border-[color:var(--color-scandary)] opacity-60"></div>
    <div class="absolute bottom-0 left-0 z-[3] w-24 h-24 md:w-32 md:h-32 border-b-4 border-l-4 border-[color:var(--color-scandary)] opacity-60"></div>
    <div class="absolute bottom-0 right-0 z-[3] w-24 h-24 md:w-32 md:h-32 border-b-4 border-r-4 border-[color:var(--color-primary)] opacity-60"></div>

    {# Main Content Container #}
    <div class="relative z-10 container px-4 flex flex-col items-center justify-center h-full pt-10">
        {# Performance Badge with Aggressive Styling #}
        {% if component.badge_text %}
        <div class="mb-8 relative inline-block group/badge">
            <div class="absolute inset-0 bg-[color:var(--color-primary)] blur-xl opacity-50 group-hover/badge:opacity-70 transition-opacity"></div>
            <div class="relative px-8 py-3 bg-black border-2 border-[color:var(--color-primary)] font-bold uppercase tracking-[0.3em] text-xs md:text-sm text-white animate-fade-in-up shadow-[0_0_30px_var(--color-primary)] clip-path-[polygon(8px_0,100%_0,calc(100%-8px)_100%,0_100%)] hover:shadow-[0_0_40px_var(--color-primary)] transition-all duration-300 transform hover:scale-105">
                <span class="relative z-10">{{ component.badge_text }}</span>
            </div>
        </div>
        {% endif %}

        {# Title with Racing Typography #}
        {% if component.title %}
        <h2 class="text-5xl md:text-7xl lg:text-8xl xl:text-9xl font-bold mb-6 font-racing text-white animate-slide-in-up leading-none tracking-tight">
            <span class="inline-block bg-gradient-to-r from-white via-gray-100 to-white bg-clip-text text-transparent drop-shadow-[0_0_30px_rgba(255,255,255,0.5)] transform hover:scale-105 transition-transform duration-300">
                {{ component.title }}
            </span>
        </h2>
        {% endif %}

        {# Subtitle with Accent Color #}
        {% if component.subtitle %}
        <h3 class="text-2xl md:text-4xl lg:text-5xl font-bold mb-8 text-[color:var(--color-scandary)] font-racing animate-slide-in-up delay-100 uppercase tracking-wider">
            <span class="inline-block drop-shadow-[0_0_20px_var(--color-scandary)] animate-pulse-glow">
                {{ component.subtitle }}
            </span>
        </h3>
        {% endif %}

        {# Description with Modern Typography #}
        {% if component.description %}
        <p class="text-base md:text-xl lg:text-2xl mb-12 max-w-4xl mx-auto font-orbitron text-gray-300 animate-fade-in-up delay-200 leading-relaxed px-6 relative">
            <span class="absolute -left-4 top-0 w-1 h-full bg-gradient-to-b from-[color:var(--color-primary)] to-[color:var(--color-scandary)]"></span>
            {{ component.description }}
        </p>
        {% endif %}

        {# CTA Buttons with Extreme Racing Style #}
        <div class="flex flex-col sm:flex-row gap-6 mb-20 animate-fade-in-up delay-300 w-full justify-center items-center">
            {% if component.primary_cta_text and component.primary_cta_url %}
            <a
                href="{{ component.primary_cta_url }}"
                class="group/cta relative min-w-[220px] inline-flex items-center justify-center px-10 py-5 text-base md:text-lg font-bold text-white transition-all duration-500 overflow-hidden"
            >
                {# Animated background #}
                <div class="absolute inset-0 bg-gradient-to-r from-[color:var(--color-primary)] via-[color:var(--color-scandary)] to-[color:var(--color-primary)] bg-[length:200%_100%] animate-gradient"></div>
                <div class="absolute inset-0 bg-black/20 group-hover/cta:bg-black/0 transition-all duration-500"></div>
                
                {# Skewed borders #}
                <div class="absolute inset-0 border-2 border-white/50 transform -skew-x-12 group-hover/cta:skew-x-0 transition-transform duration-500"></div>
                
                {# Glow effect #}
                <div class="absolute inset-0 opacity-0 group-hover/cta:opacity-100 shadow-[0_0_40px_var(--color-primary),inset_0_0_30px_var(--color-primary)] transition-opacity duration-500"></div>
                
                {# Text with arrow #}
                <span class="relative z-10 flex items-center gap-3 font-racing uppercase tracking-wider">
                    {{ component.primary_cta_text }}
                    <svg class="w-5 h-5 transform group-hover/cta:translate-x-2 transition-transform duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                </span>
            </a>
            {% endif %}

            {% if component.secondary_cta_text and component.secondary_cta_url %}
            <a
                href="{{ component.secondary_cta_url }}"
                class="group/cta-secondary relative min-w-[220px] inline-flex items-center justify-center px-10 py-5 text-base md:text-lg font-bold text-white transition-all duration-500 overflow-hidden border-2 border-white/80 hover:border-white backdrop-blur-sm bg-white/5 hover:bg-white/10"
            >
                {# Animated corner accents #}
                <div class="absolute top-0 left-0 w-4 h-4 border-t-2 border-l-2 border-[color:var(--color-scandary)] transform -translate-x-full -translate-y-full group-hover/cta-secondary:translate-x-0 group-hover/cta-secondary:translate-y-0 transition-transform duration-500"></div>
                <div class="absolute bottom-0 right-0 w-4 h-4 border-b-2 border-r-2 border-[color:var(--color-primary)] transform translate-x-full translate-y-full group-hover/cta-secondary:translate-x-0 group-hover/cta-secondary:translate-y-0 transition-transform duration-500"></div>
                
                {# Text #}
                <span class="relative z-10 font-racing uppercase tracking-wider">
                    {{ component.secondary_cta_text }}
                </span>
            </a>
            {% endif %}
        </div>

        {# Performance Stats with Angular Design #}
        {% if component.stats %}
        <div class="relative w-full max-w-5xl mx-auto animate-fade-in-up delay-500">
            {# Top racing stripe #}
            <div class="absolute top-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-[color:var(--color-primary)] to-transparent"></div>
            
            <div class="grid grid-cols-2 md:grid-cols-{{ component.stats|length }} gap-6 md:gap-10 pt-10 pb-6 px-4">
                {% for stat in component.stats %}
                <div class="relative flex flex-col items-center group/stat transform hover:-translate-y-2 transition-all duration-500">
                    {# Accent corner #}
                    <div class="absolute -top-2 -left-2 w-3 h-3 bg-[color:var(--color-scandary)] opacity-0 group-hover/stat:opacity-100 transition-opacity duration-300"></div>
                    <div class="absolute -bottom-2 -right-2 w-3 h-3 bg-[color:var(--color-primary)] opacity-0 group-hover/stat:opacity-100 transition-opacity duration-300"></div>
                    
                    {# Value #}
                    <span class="text-4xl md:text-6xl lg:text-7xl font-bold text-white font-racing mb-3 relative">
                        <span class="relative inline-block group-hover/stat:text-transparent group-hover/stat:bg-gradient-to-r group-hover/stat:from-[color:var(--color-primary)] group-hover/stat:to-[color:var(--color-scandary)] group-hover/stat:bg-clip-text transition-all duration-500 drop-shadow-[0_0_20px_rgba(255,255,255,0.3)]">
                            {{ stat.value }}
                        </span>
                    </span>
                    
                    {# Label #}
                    <span class="text-xs md:text-sm text-gray-400 group-hover/stat:text-gray-200 font-orbitron uppercase tracking-[0.25em] transition-colors duration-300 text-center">
                        {{ stat.label }}
                    </span>
                    
                    {# Hover underline #}
                    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-0 h-[2px] bg-gradient-to-r from-[color:var(--color-primary)] to-[color:var(--color-scandary)] group-hover/stat:w-full transition-all duration-500"></div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
</section>

{# Custom Keyframe Animations #}
<style>
    @keyframes speed-line {
        0% {
            transform: translateX(-100%);
            opacity: 0;
        }
        50% {
            opacity: 1;
        }
        100% {
            transform: translateX(100%);
            opacity: 0;
        }
    }
    
    @keyframes gradient {
        0%, 100% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
    }
    
    .animate-speed-line {
        animation: speed-line 2s ease-in-out infinite;
    }
    
    .animate-gradient {
        animation: gradient 3s ease infinite;
    }
    
    .animate-pulse-glow {
        animation: pulse-glow 2s ease-in-out infinite;
    }
    
    @keyframes pulse-glow {
        0%, 100% {
            filter: drop-shadow(0 0 10px currentColor);
        }
        50% {
            filter: drop-shadow(0 0 25px currentColor);
        }
    }
</style>
